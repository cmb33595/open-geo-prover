<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE geothm SYSTEM "geothm.dtd">
<geothm name="Wernick 080 (O,H,I --| A)">
	<!-- Wernick 080                                                                                  -->
	<!-- Let ABC be a triangle and O is the circumcenter, H is the orthocenter and I is the incenter. -->
	<!-- Consider RC-constructibility of vertex A from given points O, H and I.                       -->
	<constructions>
		<pfree label="A"/>
		<pfree label="B"/>
		<pfree label="I"/>
		<langray label="b" firstraypt="I" vertex="A" congangfrp="B" congangv="A" congangsrp="I" />
		<langray label="a" firstraypt="I" vertex="B" congangfrp="A" congangv="B" congangsrp="I" />
		<pintersect label="C" set1="a" set2="b" />
		<lperp label="ha" point="A" baseline="a" />
		<lperp label="hb" point="B" baseline="b" />
		<pintersect label="H" set1="ha" set2="hb" />
		<lperpbis label="ma" point1="B" point2="C" />
		<lperpbis label="mb" point1="A" point2="C" />
		<pintersect label="O" set1="ma" set2="mb" />
	</constructions>
	<freepts>
		<point label="I" />
		<point label="H" />
		<point label="O" />
	</freepts>
	<conspts>
		<point label="A" />
	</conspts>
</geothm>
