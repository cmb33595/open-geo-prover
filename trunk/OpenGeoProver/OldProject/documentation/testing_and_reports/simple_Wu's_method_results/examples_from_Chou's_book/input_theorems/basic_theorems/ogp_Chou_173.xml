<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE geothm SYSTEM "geothm.dtd">
<geothm name="Chou 173 (Orthocenter Theorem)">
	<!-- Example 173 from Chou's book                     -->
	<!-- The three altitudes of triangle are concurrent.  -->
	<constructions>
		<pfree label="A"/>
		<pfree label="B"/>
		<pfree label="C"/>
		<ltwopts label="b" point1="C" point2="A" />
		<ltwopts label="c" point1="A" point2="B" />
		<lperp label="hb" point="B" baseline="b" />
		<lperp label="hc" point="C" baseline="c" />
		<pintersect label="H" set1="hb" set2="hc" />
		<ltwopts label="a" point1="B" point2="C" />
		<ltwopts label="ha" point1="A" point2="H" />
	</constructions>
	<statement>
		<perplines line1="a" line2="ha" />
	</statement>
</geothm>
