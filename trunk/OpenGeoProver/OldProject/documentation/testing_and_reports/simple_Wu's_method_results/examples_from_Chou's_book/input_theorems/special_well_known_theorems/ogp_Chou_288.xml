<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE geothm SYSTEM "geothm.dtd">
<geothm name="Chou 288 (Simson's Theorem)">
	<!-- Example 288 from Chou's book                                       -->
	<!-- Orthogonal projections of a random point from circumscribed circle -->
	<!-- of any triangle to triangles' edges are three collinear points.    -->
	<constructions>
		<pfree label="A"/>
		<pfree label="B"/>
		<pfree label="C"/>
		<ltwopts label="c" point1="A" point2="B"/>
		<ltwopts label="a" point1="B" point2="C"/>
		<ltwopts label="b" point1="C" point2="A"/>
		<ccircumscribed label="k" point1="A" point2="B" point3="C"/>
		<prandcircle label="M" circle="k"/>
		<pfoot label="A'" origpt="M" baseline="a"/>
		<pfoot label="B'" origpt="M" baseline="b"/>
		<pfoot label="C'" origpt="M" baseline="c"/>
	</constructions>
	<statement>
		<collinearpts>
			<point label="A'"/>
			<point label="B'"/>
			<point label="C'"/>
		</collinearpts>
	</statement>
</geothm>
