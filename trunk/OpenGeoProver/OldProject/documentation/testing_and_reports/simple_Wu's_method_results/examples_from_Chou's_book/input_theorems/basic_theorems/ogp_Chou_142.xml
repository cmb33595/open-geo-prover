<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE geothm SYSTEM "geothm.dtd">
<geothm name="Chou 142 (Centroid Theorem)">
	<!-- Example 142 from Chou's book                                           -->
	<!-- Let ABC be a triangle and D, E and F are midpoints of segments BC, CA  -->
	<!-- and AB and let T be the point of intersection of lines AD and BE. Then -->
	<!-- points C, F and T are collinear.                                       -->
	<constructions>
		<pfree label="A"/>
		<pfree label="B"/>
		<pfree label="C"/>
		<pmid label="D" point1="B" point2="C" />
		<pmid label="E" point1="C" point2="A" />
		<pmid label="F" point1="A" point2="B" />
		<ltwopts label="ta" point1="A" point2="D" />
		<ltwopts label="tb" point1="B" point2="E" />
		<pintersect label="T" set1="ta" set2="tb" />
	</constructions>
	<statement>
		<collinearpts>
			<point label="C" />
			<point label="F" />
			<point label="T" />
		</collinearpts>
	</statement>
</geothm>
