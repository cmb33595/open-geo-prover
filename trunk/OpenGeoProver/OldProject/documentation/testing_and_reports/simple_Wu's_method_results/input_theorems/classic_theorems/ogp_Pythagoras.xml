<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE geothm SYSTEM "geothm.dtd">
<geothm name="Pythagoras' theorem">
	<!-- If ABC is right triangle with right angle at vertex C, then following -->
	<!-- equality holds for lengths of its edges: AB^2 = BC^2 + CA^2.          -->
	<constructions>
		<pfree label="C" />
		<pfree label="A" />
		<ltwopts label="b" point1="A" point2="C" />
		<lperp label="a" point="C" baseline="b" />
		<prandline label="B" line="a" />
	</constructions>
	<statement>
		<sqsegmentscomb>
			<segment point1="A" point2="B" />
			<coeff value="1" />
			<segment point1="B" point2="C" />
			<coeff value="-1" />
			<segment point1="C" point2="A" />
			<coeff value="-1" />
		</sqsegmentscomb>
	</statement>
</geothm>
