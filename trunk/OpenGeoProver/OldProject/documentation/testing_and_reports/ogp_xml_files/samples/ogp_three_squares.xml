<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE geothm SYSTEM "geothm.dtd">
<geothm name="Three squares">
	<constructions>
		<pfree label="A"/>
		<pfree label="B"/>
		<protated label="C" origpt="A" center="B" angmeasure="-90"/>
		<ptranslated label="D" point1="B" point2="A" origpt="C"/>
		<ptranslated label="E" point1="A" point2="B" origpt="B"/>
		<ptranslated label="F" point1="D" point2="C" origpt="C"/>
		<ptranslated label="G" point1="B" point2="E" origpt="E"/>
		<ptranslated label="H" point1="C" point2="F" origpt="F"/>
	</constructions>
	<statement>
		<algsumangles>
			<angle firstraypt="E" vertex="D" secondraypt="F"/>
			<angle firstraypt="G" vertex="D" secondraypt="H"/>
			<angle firstraypt="B" vertex="D" secondraypt="C"/>
		</algsumangles>
	</statement>
</geothm>
