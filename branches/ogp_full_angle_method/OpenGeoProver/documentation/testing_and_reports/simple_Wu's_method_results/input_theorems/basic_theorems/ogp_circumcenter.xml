<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE geothm SYSTEM "geothm.dtd">
<geothm name="Circumcenter Theorem">
	<!-- The three perpendicular bisectors of triangle's sides meet -->
	<!-- at a point, the circumcenter of a triangle.                -->
	<constructions>
		<pfree label="A" />
		<pfree label="B" />
		<pfree label="C" />
		<lperpbis label="ma" point1="B" point2="C" />
		<lperpbis label="mb" point1="C" point2="A" />
		<pintersect label="O" set1="ma" set2="mb" />
		<lperpbis label="mc" point1="A" point2="B" />
	</constructions>
	<statement>
		<pointonset set="mc" point="O" />
	</statement>
</geothm>
