<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE geothm SYSTEM "geothm.dtd">
<geothm name="Brianchon's theorem">
	<!-- Let A, B, C, D, E and F are six points from random general conic section. -->
	<!-- Let ta, tb, tc, td, te and tf be tangent lines on given conic section in  -->
	<!-- these points. Let they intersect each other in following points:          -->
	<!-- A1=taXtb, B1=tbXtc, C1=tcXtd, D1=tdXte, E1=teXtf and F1=tfXta.            -->
	<!-- Then following lines are concurrent: A1D1, B1E1 and C1F1.                 -->
	<constructions>
		<psgenconic label="c" />
		<prandgenconic label="A" conic="c" />
		<prandgenconic label="B" conic="c" />
		<prandgenconic label="C" conic="c" />
		<prandgenconic label="D" conic="c" />
		<prandgenconic label="E" conic="c" />
		<prandgenconic label="F" conic="c" />
		<ltangent label="ta" basept="A" pointset="c" />
		<ltangent label="tb" basept="B" pointset="c" />
		<ltangent label="tc" basept="C" pointset="c" />
		<ltangent label="td" basept="D" pointset="c" />
		<ltangent label="te" basept="E" pointset="c" />
		<ltangent label="tf" basept="F" pointset="c" />
		<pintersect label="A1" set1="ta" set2="tb" />
		<pintersect label="B1" set1="tb" set2="tc" />
		<pintersect label="C1" set1="tc" set2="td" />
		<pintersect label="D1" set1="td" set2="te" />
		<pintersect label="E1" set1="te" set2="tf" />
		<pintersect label="F1" set1="tf" set2="ta" />
		<ltwopts label="A1D1" point1="A1" point2="D1" />
		<ltwopts label="B1E1" point1="B1" point2="E1" />
		<ltwopts label="C1F1" point1="C1" point2="F1" />
	</constructions>
	<statement>
		<concurrentlines>
			<line label="A1D1" />
			<line label="B1E1" />
			<line label="C1F1" />
		</concurrentlines>
	</statement>
</geothm>
