<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE geothm SYSTEM "geothm.dtd">
<geothm name="Chou 154 (Incenter Theorem)">
	<!-- Example 154 from Chou's book                             -->
	<!-- The three internal bisectors of the angles of a triangle -->
	<!-- meet in a point, the incenter of the triangle.           -->
	<constructions>
		<pfree label="A"/>
		<pfree label="B"/>
		<pfree label="S"/>
		<langray label="b" firstraypt="S" vertex="A" congangfrp="B" congangv="A" congangsrp="S" />
		<langray label="a" firstraypt="S" vertex="B" congangfrp="A" congangv="B" congangsrp="S" />
		<pintersect label="C" set1="a" set2="b" />
	</constructions>
	<statement>
		<eqangles>
			<angle firstraypt="A" vertex="C" secondraypt="S"/>
			<angle firstraypt="S" vertex="C" secondraypt="B"/>
		</eqangles>
	</statement>
</geothm>
