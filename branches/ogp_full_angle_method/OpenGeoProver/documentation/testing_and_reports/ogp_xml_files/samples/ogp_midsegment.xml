<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE geothm SYSTEM "geothm.dtd">
<geothm name="Midsegment of triangle">
	<!-- Let ABC be a triangle, then its midsegment B1C1 is parallel to line BC -->
	<constructions>
		<pfree label="A" />
		<pfree label="B" />
		<pfree label="C" />
		<pmid label="B1" point1="A" point2="B" />
		<pmid label="C1" point1="A" point2="C" />
		<ltwopts label="a" point1="B" point2="C" />
		<ltwopts label="a1" point1="B1" point2="C1" />
	</constructions>
	<statement>
		<parallellines line1="a" line2="a1" />
	</statement>
</geothm>
