<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE geothm SYSTEM "geothm.dtd">
<geothm name="Golden section of pentagon">
	<!-- If a is the length of edge and d length of diagonal  -->
	<!-- of regular pentagon, then d = a * (1 + sqrt(5))/2	  -->
	<constructions>
		<pfree label="O" />
		<pfree label="A" />
		<protated label="B" origpt="A" center="O" angmeasure="72" />
		<protated label="C" origpt="B" center="O" angmeasure="72" />
	</constructions>
	<statement>
		<segratio coeff="1.61803399" >
			<segment point1="A" point2="C" />
			<segment point1="A" point2="B" />
		</segratio>
	</statement>
</geothm>
