<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE geothm SYSTEM "geothm.dtd">
<geothm name="RC-Cons 001 (A,B,T --| C)">
	<!-- Example 001                                                  -->
	<!-- Let ABC be a triangle and T is it centroid. Consider         -->
	<!-- RC-constructibility of point C from given points A, B and T. -->
	<constructions>
		<pfree label="A"/>
		<pfree label="B"/>
		<pfree label="C"/>
		<pmid label="Ma" point1="B" point2="C" />
		<pmid label="Mb" point1="C" point2="A" />
		<ltwopts label="ta" point1="A" point2="Ma" />
		<ltwopts label="tb" point1="B" point2="Mb" />
		<pintersect label="T" set1="ta" set2="tb" />
	</constructions>
	<freepts>
		<point label="A" />
		<point label="B" />
		<point label="T" />
	</freepts>
	<conspts>
		<point label="C" />
	</conspts>
</geothm>
